# Shopify App Environment Variables
# Bu dosyayı .env olarak kopyalayın ve gerçek değerlerle doldurun

# Shopify API Credentials
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_themes,write_themes

# App Configuration
SHOPIFY_APP_URL=https://your-app-domain.com
SHOPIFY_APP_NAME=Recently Viewed Products Widget
SHOPIFY_APP_VERSION=1.0.0

# Database Configuration (if using external database)
DATABASE_URL=your_database_connection_string
DATABASE_NAME=recently_viewed_products

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=your_ga_tracking_id
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Security
SESSION_SECRET=your_session_secret_key
ENCRYPTION_KEY=your_encryption_key

# External Services
CDN_URL=https://your-cdn-domain.com
REDIS_URL=your_redis_connection_string

# Development
NODE_ENV=development
DEBUG=true
PORT=3000

# Shopify Webhooks (App Store Required)
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here
JWT_SECRET=your_jwt_secret_key_here

# Note: SHOPIFY_WEBHOOK_SECRET is required for HMAC verification
# This secret is provided by Shopify when you register your app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Email Configuration (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# File Upload (if using file storage)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Performance
COMPRESSION_LEVEL=6
CACHE_CONTROL_MAX_AGE=31536000
